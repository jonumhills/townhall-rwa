# ============================================================================
# TOWNHALL REZONING TRACKER - ENVIRONMENT CONFIGURATION TEMPLATE
# ============================================================================
# Copy this file to .env and fill in your actual values

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

# Vite requires VITE_ prefix for frontend variables
VITE_API_BASE_URL=http://localhost:8000/api
VITE_MAPBOX_TOKEN=your_mapbox_token_here

# App Metadata
VITE_APP_NAME=Townhall Rezoning Tracker
VITE_APP_DESCRIPTION=Track Government Rezoning Decisions Before They Break Ground
VITE_APP_URL=http://localhost:5173

# Map Defaults (Charlotte, NC)
VITE_DEFAULT_MAP_CENTER_LAT=35.2271
VITE_DEFAULT_MAP_CENTER_LNG=-80.8431
VITE_DEFAULT_MAP_ZOOM=12

# Elasticsearch/Kibana Configuration
VITE_ELASTIC_ENDPOINT=your_elasticsearch_endpoint_here
VITE_KIBANA_ENDPOINT=your_kibana_endpoint_here
VITE_ELASTIC_API_KEY=your_elasticsearch_api_key_here
VITE_ELASTIC_AGENT_NAME=townhall_city_analyst
VITE_DASHBOARD_URL=your_kibana_dashboard_url_here

# ============================================================================
# BACKEND CONFIGURATION
# ============================================================================

# Server Settings
API_HOST=localhost
API_PORT=8000
API_RELOAD=true
LOG_LEVEL=INFO

# CORS Settings (allow frontend origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Data Directories
DATA_ROOT_DIR=./data

# ============================================================================
# SCRAPER CONFIGURATION
# ============================================================================

# Application
APP_NAME=Charlotte Rezoning Tracker
DEBUG=True

# Data Storage
DATA_DIR=./data
JSON_OUTPUT_DIR=./data/json
PDF_DOWNLOAD_DIR=./data/pdfs
AUDIO_DOWNLOAD_DIR=./data/audio

# Scraping Settings
BASE_URL=https://charlottenc.legistar.com
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
RATE_LIMIT_DELAY=1.0

# OpenAI API (for future audio transcription)
# OPENAI_API_KEY=your_api_key_here

# ============================================================================
# ALERT SYSTEM CONFIGURATION
# ============================================================================

# Alert Agent
ALERT_AGENT_ID=townhall_alert_checker

# Email Service (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_gmail_address@gmail.com
SMTP_PASSWORD=your_gmail_app_password_here
ALERT_FROM_EMAIL=your_gmail_address@gmail.com
